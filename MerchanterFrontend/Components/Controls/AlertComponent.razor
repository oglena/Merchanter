@if (!string.IsNullOrWhiteSpace(@page_message)) {
    <FluentLayout Orientation="Orientation.Vertical" Class="alert" role="alert" Style="max-height:44px;">
        <FluentGrid Justify="JustifyContent.SpaceBetween">
            <FluentGridItem Justify="JustifyContent.FlexStart">
                <FluentLabel Typo="Typography.Body" Style="align-content:center;">@(!string.IsNullOrWhiteSpace(message_status) ? page_message + " (" + message_status + ")" : page_message)</FluentLabel>
            </FluentGridItem>
            <FluentGridItem Justify="JustifyContent.FlexEnd">
                <FluentButton Type="ButtonType.Button" OnClick="CloseButton" Appearance="Appearance.Neutral" IconStart="@(new Icons.Regular.Size16.Dismiss())"></FluentButton>
            </FluentGridItem>
        </FluentGrid>
    </FluentLayout>
}
@code {
    [Parameter]
    public string? message_status { get; set; }
    [Parameter]
    public string? page_message { get; set; }

    private async void CloseButton() {
        page_message = string.Empty;
        await Task.CompletedTask;
    }
}
