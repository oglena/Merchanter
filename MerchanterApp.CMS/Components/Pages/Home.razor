@page "/"
@attribute [Authorize]
@using MerchanterApp.CMS.Components.Controls;

<PageTitle>Dashboard | Merchanter</PageTitle>
<div class="text-start w-100">
    <div class="row mt-3">
        <CascadingValue Value="@CID">
            <div class="col-4 p-2 bg-dark text-light rounded-3">
                <ServersComponent @rendermode="InteractiveServer" />
            </div>
            <div class="col-8 bg-light rounded-3">
                <CustomerLogsComponent @rendermode="InteractiveServer" CID="@CID" />
            </div>
        </CascadingValue>
    </div>
</div>
@code {
    [CascadingParameter]
    public string? CID { get; set; } = "0";
}